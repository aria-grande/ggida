<div id="ggidaContent" class="cont_main" role="main">
  <div id="cMain">
    <div id="mArticle">
      <div class="box_g box_sign">
        <a href="/" title="홈으로"><img src="/images/m640/img_logo.png" class="logo_img" alt="끼다 로고"></a>
        <h3 class="tit_login">로그인</h3>
        <form action="/managers/sign_in" method="post" class="form-horizontal">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
