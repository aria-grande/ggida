<%@title = "홈"%>
<%@style = "cont_top"%>

<div id="mArticle">
  <div class="box_g box_contact">
    <ul class="list_contact">
    <% @parties.each_with_index do |party, idx| %>
      <li class="<%=party.state=="accepting"?"on":""%>" data-idx="<%=idx%>">
        <div class="cont_contact">
          <%
          thumbnail = "/images/m640/thumb_temp.png";
          if (party.images_file_name)
          	thumbnail = "http://file.ggida.org/img/#{party.id}_medium_#{party.images_file_name}"
          end
          %>
          <div class="thumb_g"><img src="<%=thumbnail%>" class="thumb_img" alt="" /></div>
          <div href="#none" class="link_ask">
            <div class="desc_contact">
              <strong class="tit_contact"><%=party.title%></strong>
              <span class="txt_contact"><%=party.start_date.strftime("%m.%d %H시")%>, <%=party.place%></span>
              <a href="/parties/<%=party.id%>">
                <span class="contact_r"><%=party.left_seats%>명 남았어요 <span class="txt_bar">|</span> <em>모임 참가 신청</em></span>
              </a>
            </div>
          </div>
          <div class="bg_dimmed"></div>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
</div>